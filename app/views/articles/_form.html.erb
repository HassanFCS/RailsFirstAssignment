<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @article%>
      <%= form_with(model: @article, class:"shadow p-3 mb-5 bg-info rounded", local: true) do |f|%>

        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded" %>
          </div>
        </div>

        <div class="form-group row mt-5">
          <%= f.label :description, class: "col-2 col-form-label text-light" %>  
          <div class="col-10">
          <%= f.text_area :description, rows: 10, class: "form-control shadow rounded" %>
          </div>
        </div>

        <div class="form-group row mt-5">
          <%= f.label :category, class: "col-2 col-form-label text-light" %>  
          <div class="col-10">
            <%= f.collection_select(:category_ids, Category.all, :id, :name, {prompt: "Select Categories, or you can leave it empty"}, {multiple: true, size: 3, class: "form-select shadow rounded"}) %>
          </div>
        </div>

        <div class="form-group text-center mt-5">
          <%= f.submit class: "btn btn-outline-light btn-lg"%>
        </div>
      <%end%> 
    </div>
    <div class="text-center mb-3">
      <%= link_to '[Cancel or Return to Articles page]', articles_path, class:"text-info"%>
    </div>
  </div>
</div>